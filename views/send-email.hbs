<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Enviar un email</h1>
            <hr>
            <form method="POST" action="/email?vendorsId={{_id}}">
              <h3>Correo dirigido a {{username}}</h3>
                <div class="form-group">
                    <label for="subject" class="form-input">Asunto</label>
                    <input name="subject" type="text" class="form-control" id="subject">
                </div>
                <div class="form-group">
                    <label for="message" class="form-input">Mensaje</label>
                    <textarea name="message" id="message" rows="3" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-dark btn-block">Enviar email</button>
            </form>
        </div>
    </div>

</div>