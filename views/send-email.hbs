<div class="container top-margin">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="row justify-content-center">
                <span class="span-grande"> Enviar un email </span>
            </div>
            <hr>
            <form method="POST" action="/email?vendorsId={{_id}}">

                <div class="row justify-content-center">
                    <span class="span-medio"> Correo dirigido a {{username}}</span>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <label for="subject" class="form-input span-pequeño">Asunto</label>
                    </div>
                    <input name="subject" type="text" class="form-control" id="subject">
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <label for="message" class="form-input span-pequeño">Mensaje</label>
                    </div>
                    <textarea name="message" id="message" rows="3" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-dark btn-block">Enviar email</button>
            </form>

        </div>

    </div>