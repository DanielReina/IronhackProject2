<div class="container">
  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nuevo juego</h1>
    </div>

    <div class="col-md-6">

      <form action="/perfil/nuevojuego" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title-input" class="form-input">Título</label>
          <input name="title" type="text" class="form-control" id="title-input">
        </div>
        <div class="form-group">
          <label for="description-input" class="form-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-input">
        </div>
        <div class='form-group'>
          <div class="custom-file">
            <input name="imageFile" type="file" class="custom-file-input" id="imageFile">
            <label class="custom-file-label" for="imageFile">Seleccionar imagen</label>
          </div>
        </div>
        <div class="form-group">
          <label for="developer-input" class="form-input">Developers</label>
          <input name="developer" type="text" class="form-control" id="developer-input">
        </div>
        <div class="form-group">
          <label for="rating-input" class="form-input">Rating</label>
          <input name="rating" type="number" class="form-control" id="rating-input">
        </div>
        <div class="form-group">
          <label for="rating-input" class="form-input">Unidades para vender</label>
          <input name="availableSale" type="number" class="form-control" id="sellingGames-input">
        </div>
        {{#if errorMsg}}
        <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
          {{errorMsg}}</p>
        {{/if}}
        <button type="submit" class="btn btn-dark">¡Añadir juego!</button>

        <a href="/" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>