<div class="container top-margin">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="row justify-content-center">
                <span class="span-grande"> Edita la imagen </span>
            </div>
            <hr>
            <form method="POST" action="/juegos/imagen?gameId={{gameId}}" enctype="multipart/form-data">
                <div class='form-group'>
                    <div class="custom-file">
                        <input name="imageFile" type="file" class="custom-file-input" id="imageFile">
                        <label class="custom-file-label" for="imageFile">Seleccionar imagen</label>
                    </div>
                </div>
                <button type='submit' class='btn btn-dark btn-block'>Editar la imagen</button>
            </form>
        </div>
    </div>
</div>