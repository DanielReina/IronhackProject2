<div class="container">
  <div class="row">
    <div class="col-md-5">
      <span class="span-grande"> Editar {{title}} </span>
    </div>
    <div class="col-md-6">
      <form action="/juegos/editar?gameId={{id}}" method="POST">
        <div class="form-group">
          <div class="row justify-content-center">
            <label for="title-input" class="span-pequeño">Título</label>
          </div>
          <input name="title" type="text" class="form-control" id="title-input">
        </div>
        <div class="form-group">
          <div class="row justify-content-center">
            <label for="description-input" class="span-pequeño">Descripción</label>
          </div>
          <input name="description" type="text" class="form-control" id="description-input">
        </div>
        <div class="form-group">
          <div class="row justify-content-center">
            <label for="developer-input" class="span-pequeño">Desarrolado por</label>
          </div>
          <input name="developer" type="text" class="form-control" id="developer-input">
        </div>
        <div class="form-group">
          <div class="row justify-content-center">
            <label for="rating-input" class="span-pequeño">Puntuación</label>
          </div>
          <input name="rating" type="number" class="form-control" id="rating-input">
        </div>
        <div class="row justify-content-center">
          <button type="submit" class="btn btn-dark">¡Editar juego!</button>
          <a href="/juegos" class="btn btn-dark" style="margin-left: 25px">Volver</a>
        </div>
      </form>
    </div>
  </div>
</div>